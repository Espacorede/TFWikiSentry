{
    "language": "Russian",
    "rules": {
        "language-links-ru": {
            "expression": "\\[\\[(?!vdc:|:?file:|w(ikia|ikipedia)?:|#|:?image:|media:)([^/]+?)(\\/(?!ru).+]]|]]|#)",
            "flags": "gi",
            "reason": "Link to wrong language (missing /ru)"
        },
        "wikipedia-links-ru": {
            "expression": "\\[\\[w(ikipedia)?:(?!ru:)((.*)|(.*))\\]\\]",
            "flags": "gi",
            "reason": "Link to wrong Wikipedia (missing ru: after w:)"
        }
    }
}