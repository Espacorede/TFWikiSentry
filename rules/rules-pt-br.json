{
    "language": "Brazilian Portuguese",
    "rules": {
        "language-links-br": {
            "expression": "\\[\\[(?!vdc:|w(?:ikia|ikipedia)?:|file|image|media:)([^\\]|\/]+?(?!\/pt-br))(#.*)?(\\|.*?)?\\]\\]",
            "flags": "gi",
            "reason": "Link to wrong language (missing /pt-br)"
        },
        "wikipedia-links-br": {
            "expression": "\\[\\[w(ikipedia)?:(?!pt:)((.*)|(.*))\\]\\]",
            "flags": "gi",
            "reason": "Link to wrong Wikipedia (missing pt: after w:)"
        },
        "corpo-a-corpo-br": {
            "expression": "(?:corpo-a-corpo)|(?:corpo(?:-|\\s)à(?:-|\\s)corpo)",
            "flags": "gi",
            "reason": "corpo a corpo escrito errado"
        },
        "classes-br": {
            "expression": "escoteiro|soldado|engenheiro|espião",
            "flags": "gi",
            "reason": "nome de classe traduzido"
        },
        "misc-br": {
            "expression": "(?:ite(?:m|ns) )?misc(?:s?\\.|el[aâ]neos?)",
            "flags": "gi",
            "reason": "miscelâneo -> cosmético"
        },
        "workshop-br": {
            "expression": "contribu[íi]d[oa]s?]? (?:(?:n|pel)?a|pa?ra(?: a)?) (\\[\\[Steam Workshop\/pt-br\\|)?Oficina",
            "flags": "gi",
            "reason": "O correto é 'contribuído à Oficina'"
        },
        "steam-br": {
            "expression": "(^| )(à|(pr|[dn])?a) (\\[\\[Steam\/pt-br\\|)?Steam",
            "flags": "gim",
            "reason": "Steam é masculino (a Steam -> o Steam)"
        }
    }
}