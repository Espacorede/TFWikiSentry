{
    "language": "Portuguese",
    "rules": {
        "language-links-pt": {
            "expression": "\\[\\[(?!vdc:|:?file:|w(ikia|ikipedia)?:|#|:?image:|media:)([^/]+?)(\\/(?!pt).+]]|]]|#)",
            "flags": "gi",
            "reason": "Link to wrong language (missing /pt)"
        },
        "wikipedia-links-pt": {
            "expression": "\\[\\[w(ikipedia)?:(?!pt:)((.*?)|(.*))\\]\\]",
            "flags": "gi",
            "reason": "Link to wrong Wikipedia (missing pt: after w:)"
        }
    }
}