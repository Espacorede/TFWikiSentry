            "expression": "\\[\\[(?!vdc:|w(?:ikia|ikipedia)?:|file|image|media:)([^\\]|\/]+?(?!\/ja))(#.*)?(\\|.*?)?\\]\\]",
            "flags": "gi",
            "reason": "Link to wrong language (missing /ja)"
        },
        "wikipedia-links-ja": {
            "expression": "\\[\\[w(ikipedia)?:(?!ja:)((.*)|(.*))\\]\\]",
