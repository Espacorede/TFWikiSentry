{
    "language": "Polish",
    "rules": {
        "language-links-pl": {
            "expression": "\\[\\[(?!vdc:|w(?:ikia|ikipedia)?:|file|image|media:)([^\\]|\/]+?(?!\/pl))(#.*)?(\\|.*?)?\\]\\]",
            "flags": "gi",
            "reason": "Link to wrong language (missing /pl)"
        },
        "wikipedia-links-pl": {
            "expression": "\\[\\[w(ikipedia)?:(?!pl:)((.*)|(.*))\\]\\]",
            "flags": "gi",
            "reason": "Link to wrong Wikipedia (missing pl: after w:)"
        }
    }
}