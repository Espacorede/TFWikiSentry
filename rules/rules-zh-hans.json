{
    "language": "Simplified Chinese",
    "rules": {
        "language-links-hans": {
            "expression": "\\[\\[(?!vdc:|:?file:|w(ikia|ikipedia)?:|#|:?image:|media:)([^/]+?)(\\/(?!zh-hans).+]]|]]|#)",
            "flags": "gi",
            "reason": "Link to wrong language (missing /zh-hans)"
        },
        "wikipedia-links-hans": {
            "expression": "\\[\\[w(ikipedia)?:(?!zh:)((.*)|(.*))\\]\\]",
            "flags": "gi",
            "reason": "Link to wrong Wikipedia (missing zh: after w:)"
        }
    }
}